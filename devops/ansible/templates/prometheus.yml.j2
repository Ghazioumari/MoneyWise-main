global:
  scrape_interval: 15s
  evaluation_interval: 15s

alerting:
  alertmanagers:
    - static_configs:
        - targets:
          - localhost:9093

rule_files:
  - "/etc/prometheus/rules/*.yml"

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node_exporter'
    static_configs:
      - targets: ['localhost:9100']

  - job_name: 'moneywise_backend'
    metrics_path: '/actuator/prometheus'
    static_configs:
      - targets: ['{{ backend_host }}:{{ backend_port }}']

  - job_name: 'moneywise_frontend'
    static_configs:
      - targets: ['{{ frontend_host }}:{{ frontend_port }}']

  - job_name: 'iis_exporter'
    static_configs:
      - targets: ['{{ iis_host }}:9182']
